  author = {Sancassiani, Federica and Pintus, Elisa and Holte, Arne and Paulus, Peter and Moro, Maria Francesca and Cossu, Giulia and Angermeyer, Matthias C and Carta, Mauro Giovanni and Lindert, Jutta},
