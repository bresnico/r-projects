  author = {Hernández, Maciel M and Eisenberg, Nancy and Valiente, Carlos and VanSchyndel, Sarah K and Spinrad, Tracy L and Silva, Kassondra M and Berger, Rebecca H and Diaz, Anjolii and Terrell, Nathan and Thompson, Marilyn S and Southworth, Jody},
