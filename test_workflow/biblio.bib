@inproceedings{gay2018b,
  title = {Quelles compétences émotionnelles des élèves pour gérer leur anxiété ?},
  author = {Gay, Philippe and Bressoud, Nicolas and Richard, Syvlie and Kappeler, Gabriel and Gomez, Jean-Marc},
  date = {2018},
  location = {{Zürich, Suisse}},
  abstract = {La conscience émotionnelle (i.e., différencier, exprimer analyser et faire attention à ses propres émotions et à celles d’autrui, Lahaye et al., 2011, p. 418) contribue à la santé physique et psychique des enfants ainsi que leur bien-être social (p.ex., Sendzik et al., 2017). Dans le but d’explorer les relations entre différentes facettes de la conscience émotionnelle et de l'anxiété, huit classes d’élèves (N = 158 ; M-âge = 11.4 ans [±0.68], 46.8\% de filles) ont rempli le Emotion Awareness Questionnaire revised (EAQ-30) (Lahaye et al., 2011) – permettant d’évaluer six facettes de la conscience émotionnelle – et les échelles d’anxiété Multidimensional Anxiety Scale for Children (MASC) (Turgeon et al., 2006) et Test Anxiety Scale (TAS, Gomez \& Gay, 2017). Les analyses de régression multiple incluant l’âge, le genre, les notes moyennes des élèves et les six dimensions du EAQ comme variables indépendantes ont principalement fait ressortir que 1)	Différencier les émotions prédisait des difficultés cognitives (TAS) (β=-.403) et différents symptômes somatiques (TAS et MASC), ce qui suggère que développer cette compétence émotionnelle pourrait réduire le stress lié aux examens. Il s’agirait donc d’apprendre aux élèves à différencier diverses émotions et à localiser leurs antécédents, en particulier chez les enfants en difficulté scolaire. Dans cette optique, même un bref entraînement à la compréhension des émotions s’avère efficace (Sprung et al., 2015). 2)	Partager ses émotions prédisait l’anxiété sociale (MASC) (β=-.386) et différentes formes d’évitement, ce qui souligne l'importance d'exprimer des émotions et suggère qu’aider les enfants à apprendre à partager leurs émotions pourrait réduire de nombreux symptômes anxieux ; 3)	Enfin, la conscience corporelle prédisait l’anxiété de séparation (MASC) (β=287) et différents symptômes somatiques (MASC et TAS). Des interventions basées sur la pleine conscience présenteraient donc un intérêt particulier pour favoriser une conscience émotionnelle adaptative (Zoogman, Goldberg, Hoyt, \& Miller, 2015).},
  eventtitle = {Congrès de la Société suisse pour la recherche en éducation (SSRE)},
  langid = {french}
}

@inproceedings{gay2019,
  title = {Apport des sciences affectives et de la psychologie positive pour favoriser le bien-être et l’estime de soi de façon différenciée : « à chacun ses forces de caractère » !},
  author = {Gay, Philippe and Bressoud, Nicolas and Verger, Nicolas and Shankland, Rebecca and Samson, Andrea C.},
  date = {2019},
  location = {{Bâle, Suisse}},
  url = {http://hdl.handle.net/20.500.12162/4184},
  urldate = {2020-09-18},
  abstract = {Dans un contexte d’hétérogénéité, s’intéresser aux ressources ou aux forces des individus revêt une dimension particulièrement pertinente et attractive pour favoriser notamment le bien-être de l’individu et du groupe-classe, l’estime de soi, la dynamique d’un groupe ou encore la motivation des élèves et des enseignants. Cela fait d’ailleurs plus d’une dizaine d’année que les recherches en psychologie positive s’intéressent à reconnaitre les ressources énergisantes des individus plutôt que leurs faiblesses, les utiliser davantage dans le quotidien et en classe. A ce propos, Peterson et Seligman (2004) ont développé une taxonomie de 24 forces personnelles (p.ex., patience, persévérance, collaboration, gentillesse) qui jouent un rôle important dans le développement du bien-être individuel et le fonctionnement optimal de chacun.  Dans ce contexte, l’objectif de cette recherche était d’évaluer les impacts d’une séquence pédagogique (compatible avec le plan d’études romand) visant à favoriser l’identification de la diversité des ressources individuelles en travaillant à partir des forces de caractères (Linkins, Niemiec, Gillham, \& Mayerson, 2015).  Une intervention de type pré-test post-test dans un échantillon de 96 élèves (7 à 12 ans) a permis de révéler que ce bref programme (4 séances sur une semaine) était efficace pour améliorer significativement l’estime de soi chez des élèves de 11-12 ans en comparaison avec une classe témoin. L’intervention montre également un certain effet sur le bien-être dans tous les groupes expérimentaux.  Cet outil prometteur pourrait s’avérer particulièrement intéressant en allongeant le temps passé à travailler sur ces éléments de psychologie positive et en ajoutant d’autres étapes qui ont déjà fait leurs preuves pour améliorer la cohésion du groupe classe en lien avec les forces de caractère : travailler sur l’utilisation des forces et sur la reconnaissance des forces des pairs.},
  eventtitle = {au Congrès de la Société suisse pour la recherche en éducation (SSRE)},
  langid = {french}
}

