@article{silinskas2015,
  title = {Children Evoke Similar Affective and Instructional Responses from Their Teachers and Mothers.},
  author = {Silinskas, Gintautas and Dietrich, Julia and Pakarinen, Eija and Kiuru, Noona and Aunola, Kaisa and Lerkkanen, Marja-Kristiina and Hirvonen, Riikka and Muotka, Joona and Nurmi, Jari-Erik},
  date = {2015},
  journaltitle = {International Journal of Behavioral Development},
