@article{weber2016,
  title = {Positive {{Feelings}} at {{School}}: {{On}} the {{Relationships Between Students}}’ {{Character Strengths}}, {{School}}-{{Related Affect}}, and {{School Functioning}}},
  author = {Weber, Marco and Wagner, Lisa and Ruch, Willibald},
  date = {2016-02},
  journaltitle = {Journal of Happiness Studies},
  volume = {17},
